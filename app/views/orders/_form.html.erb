    <%= form.label :product_count, style: "display: block" %>
    <%= form.text_field :product_count %>
  </div>

  <div>
    <%= form.label :customer_id, style: "display: block" %>
    <%= form.collection_select :customer_id, Customer.all, :id, :full_name, include_blank: true %>
