<p style="color: green"><%= notice %></p>
<div class="container-fluid">
  <h1>Customers</h1>

  <table
    id="customers"
    class="table table-striped table-bordered border-secondary table-sm"
  >
    <thead>
      <tr>
        <th scope="col">Full Name</th>
        <th scope="col">Number of orders</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody class="table-group-divider">
      <% @customers.each do |customer| %>
      <tr scope="row">
        <td><%= customer.full_name%></td>
        <td><%=customer.orders.count%></td>
        <td>
          <div class="container text-center">
            <div class="row">
              <div class="col">
                <%= button_to "Show", customer, method: :get, class: "btn btn-primary btn-sm w-100" %>
              </div>
              <div class="col">
                <%= button_to "Edit", edit_customer_path(customer), method: :get, class: "btn btn-primary btn-sm w-100" %>
              </div>
              <div class="col">
                <%= button_to "Delete", customer, method: :delete, data: {turbo_confirm: "Are you sure?"}, class: "btn btn-primary btn-sm w-100" %>
              </div>
            </div>
          </div>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <p>
    <%= link_to "New customer", new_customer_path, class: "btn btn-primary btn-sm mt-3" %>
  </p>
  <p>
    <%= link_to "To orders", orders_path, class: "btn btn-primary btn-sm" %>
  </p>
</div>
